{
  "name": "action-artifacts",
  "version": "0.0.0",
  "private": true,
  "description": "Action to interact with Scality Artifacts service",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package && yarn test",
    "all-but-tests": "yarn install && yarn run build && yarn run format && yarn run lint --fix && yarn run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scality/action-artifacts.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "6.0.0",
    "@actions/glob": "^0.4.0",
    "@octokit/rest": "^20.1.0",
    "@octokit/types": "^13.5.0",
    "@types/async": "^3.2.12",
    "async": "^3.2.6",
    "axios": "^1.7.4",
    "isomorphic-git": "^1.27.1"
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "@typescript-eslint/parser": "^8.9.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.4",
    "typescript": "^5.6.2"
  }
}
